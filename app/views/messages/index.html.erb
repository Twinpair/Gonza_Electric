  <%= link_to "Back to GonzaElectric.com", :root, id:"back" %>

  <section >
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h3 class="text-center"><u>All Messages</u></h3>
          <table align="center" border="2"> 
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Message</th>
            <th>Date</th>
            <th>Delete</th>
            <% @messages.each do |message| %>
            <tr>
              <td><%= message.name %></td>
              <td><%= message.phone %></td>
              <td><%= message.email %></td>
              <td><%= message.message %></td>
              <td><%= message.created_at.strftime("%B %d, %Y")%></td>
              <td><%= link_to "Delete", message, method: :delete, data: { confirm: "You sure?" } %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </section>